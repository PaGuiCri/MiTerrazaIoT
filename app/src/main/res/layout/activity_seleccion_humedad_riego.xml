<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeleccionHumedadRiego">

    <Button
        android:id="@+id/BtnEnvioHum"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:text="Enviar"
        app:layout_constraintEnd_toEndOf="@+id/TxtHumRiego"
        app:layout_constraintStart_toStartOf="@+id/TxtHumRiego"
        app:layout_constraintTop_toBottomOf="@+id/TxtHumRiego"
        tools:ignore="HardcodedText,MissingConstraints" />


    <TextView
        android:id="@+id/TitHumRiego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Seleccion de Humedad de Riego"
        android:textColor="#46750b"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/TxtHumRiego"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="center"
        android:hint="%"
        android:inputType="textPersonName"
        android:text="%"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/TitHumRiego"
        app:layout_constraintStart_toStartOf="@+id/TitHumRiego"
        app:layout_constraintTop_toBottomOf="@+id/TitHumRiego"
        tools:ignore="MissingConstraints,SpUsage" />

    <SeekBar
        android:id="@+id/BarraHum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:progressBackgroundTint="#bf0909"
        android:progressTint="#F44336"
        android:thumbTint="#D32F2F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnEnvioHum" />
</androidx.constraintlayout.widget.ConstraintLayout>